{
  "request": {
    "method": "POST",
    "url": "/api/external/shipping",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.id =~ /\\d+/ && @.name =~ /.+/ && @.address =~ /.+/)]"
      }
    ]
  },
  "response": {
    "status": 200,
    "transformers": ["response-template"],
    "jsonBody": {
      "status": "SHIPPED",
      "trackingNumber": "{{randomValue length=30 type='ALPHANUMERIC'}}"
    },
    "headers": {
      "Content-Type": "application/json"
    },
    "fixedDelayMilliseconds": 800
  }
}